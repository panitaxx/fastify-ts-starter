{
  "name": "fastify-parser",
  "version": "0.1.0",
  "description": "Simple Boilerplate for api server with fastify coded in TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/panitaxx/fastify-ts-starter.git"
  },
  "author": "Ivan Aponte<ivan@aponte.dev>",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/",
    "watch-node": "nodemon dist/",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "convict": "^5.0.0",
    "fastify": "^2.15.1",
    "fastify-auth": "^0.5.0",
    "fastify-cors": "^2.1.3",
    "fastify-sensible": "^2.0.1",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/convict": "^4.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.47",
    "@types/shelljs": "^0.8.8",
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  }
}
